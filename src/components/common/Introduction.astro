---
/* interface Props {
  title: string;
  description: string;
} */
const { title, description, image } = Astro.props;
---

<section class="lg:flex lg:flex-row lg:flex-nowrap lg:h-screen">
  <div
    class="bg-firefly-900 h-[30dvh] flex justify-start items-end lg:h-full lg:w-1/4 lg:items-start lg:justify-end"
  >
    <!-- TAILLE DU TITRE A ADAPTER APRÈS TYPO DEFINITIVE -->
    <!-- Ajouter une ombre ? -->
    <h1
      class="w-fit title text-8xl text-firefly-500 z-10 relative lg:text-9xl lg:mt-24 lg:translate-x-1/3"
      data-menu-text="projets"
    >
      {title}<span class="text-firefly-500">.</span>
    </h1>
  </div>
  <div
    class="lg:w-3/4 lg:h-full lg:flex lg:flex-row lg:p-3 lg:space-x-10 lg:pt-20 xl:p-10 xl:pt-28 xl:space-x-16 2xl:space-x-32 2xl:pt-36 2xl:p-14"
  >
    <div
      class="h-[70dvh] flex flex-col items-end px-3 py-10 justify-between lg:h-full lg:flex-row lg:w-1/3 lg:p-0 xl:w-2/5"
    >
      <!-- À CHANGER -->
      <img
        class="w-3/5 h-[90%] object-cover object-center lg:h-[50vh] lg:w-full xl:h-[60vh]"
        src="/projets/test.webp"
        alt="lorem"
      />
      <div
        class="w-3/4 mt-6 h-[1px] bg-firefly-500 self-center lg:h-40 lg:w-[1px] lg:hidden"
      >
      </div>
    </div>
    <div class="p-3 pb-10 lg:w-2/3 lg:p-0 xl:w-3/5">
      <p class="intro-description relative text-firefly-900">{description}</p>
    </div>
  </div>
</section>
<style lang="postcss">
  @media screen and (min-width: 1024px) {
    .intro-description::before {
      content: "";
      @apply absolute -bottom-6 -left-7 w-1/3 h-1/2 border-l-[1px] border-b-[1px] border-firefly-900
    }
  }
</style>
