<section class="flex flex-col justify-center overflow-hidden bg-fantasy-50 p-4 md:px-10">
	<h2
		class="relative z-10 w-fit self-end text-end font-primary text-5xl text-firefly-900 lg:h-1/5 lg:self-start lg:text-start lg:text-7xl xl:text-8xl"
	>
