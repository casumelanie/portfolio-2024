	<div class="mt-20 flex w-full flex-row flex-wrap justify-between self-start lg:h-4/5">
		<div class="mx-auto flex w-full max-w-3xl flex-row flex-wrap justify-between gap-y-4">
			{
				skills.map((skill) => (
					<div class="h-fit w-1/3 lg:w-1/4">
						<div class="skill mx-auto h-28 w-fit overflow-hidden pb-6">
							<img
								class="relative mx-auto mb-8 h-20 w-20 object-contain object-center"
								src={skill.img.src}
								alt={skill.img.alt}
							/>
							<div class="img-couleur mx-auto flex h-28 w-full flex-col items-center justify-between">
								<img
									class="relative mx-auto h-20 w-20 object-contain object-center"
									src={skill.imgRvb.src}
									alt={skill.imgRvb.alt}
								/>
								<span class="inline-block w-full text-center text-base lowercase">{skill.text}</span>
							</div>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
<style>
	@media screen and (min-width: 1024px) {
		.skill > img,
		.skill .img-couleur {
			transition: all 0.7s;
		}
		.skill:hover > img {
			transform: translateY(-100%);
		}
		.skill:hover .img-couleur {
			transform: translateY(-100%);
		}
	}
</style>
