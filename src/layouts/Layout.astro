---
import "/src/assets/fonts/stylesheet.css";
import Menu from "../components/common/Menu.astro";
interface Props {
  title: string;
  menuText: string;
}

const { title, menuText } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative">
    <Menu title={menuText} />
    <slot />
  </body>
</html>
<style is:global lang="postcss" define:vars={{ menuText: menuText }}>
html {
  @apply bg-fantasy-50
}

body,
body * {
  @apply font-content font-light lg:text-xl tracking-[1px];
  line-height: normal !important;
  word-spacing: 1px;
}

@media screen and (max-width: 1023px) {
  .title,
  .title span {
    writing-mode: vertical-rl;
    text-orientation: mixed;
    @apply rotate-180 translate-y-1/3;
  }
}

.title,
.title span {
  @apply font-primary;
  white-space: nowrap;
}

@media screen and (min-width: 1024px) {
  .title,
  .title span {
    @apply text-9xl;
  }
}

